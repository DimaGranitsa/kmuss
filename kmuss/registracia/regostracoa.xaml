<Page x:Class="kmuss.registracia.regostracoa"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kmuss.registracia"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800" FontSize="14" Background="Blue"
      Title="regostracoa">

    <Grid>
        <Border Background="Aquamarine" CornerRadius="40" Margin="20">
            <StackPanel Margin="40">
                <Label Content="логин" Foreground="White" FontSize="50" HorizontalAlignment="Center"/>
                <Separator></Separator>
                <Label Content="username" Foreground="White" />
                <TextBox Name="txtUsername" Background="Black" FontSize="30" Foreground="White"></TextBox>
                <Label Content="password" Foreground="White" />

                <PasswordBox Name="txtpassword" Background="Black" FontSize="30" Foreground="White"></PasswordBox>
                <Button Name="vhodvkobinet" Content="вход кабинет" Margin="40 20" Background="Black" FontSize="19" Foreground="White" Click="Vhodvkobinet_Click"></Button>

            </StackPanel>
        </Border>

    </Grid>
</Page>
